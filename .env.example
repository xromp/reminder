# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/reminder_db?schema=public"
POSTGRES_PORT=5432
POSTGRES_PASSWORD=password
POSTGRES_DB=reminder_db

# Server
PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_ENDPOINT_URL=http://localstack:4566

# SQS
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/000000000000/reminder-notifications
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/000000000000/reminder-notifications-dlq

# Webhook
HOOKBIN_URL=https://hookbin.com/your_bin_id

# Scheduler
SCHEDULER_ENABLED=true
WORKER_ENABLED=true
RECOVERY_ENABLED=true

# Worker Configuration
WORKER_CONCURRENCY=10
WORKER_POLL_INTERVAL=5000
WORKER_VISIBILITY_TIMEOUT=30

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60,300,900
GRACE_PERIOD_MINUTES=7200

# CloudWatch
CLOUDWATCH_NAMESPACE=ReminderNotifications

# SMTP Configuration
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_FROM_EMAIL=noreply@reminder.local
SMTP_FROM_NAME=Reminder App
