# Database
DATABASE_URL="postgresql://user:password@localhost:5432/birthday_db?schema=public"

# Server
PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# SQS
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/birthday-notifications
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789/birthday-notifications-dlq

# Webhook
HOOKBIN_URL=https://hookbin.com/your_bin_id

# Scheduler
SCHEDULER_ENABLED=true
WORKER_ENABLED=true
RECOVERY_ENABLED=true

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60,300,900

# CloudWatch
CLOUDWATCH_NAMESPACE=BirthdayNotifications
