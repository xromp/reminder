# Docker Compose Environment Variables
# Copy this to .env for docker-compose usage

# Database
POSTGRES_PASSWORD=birthday_secure_password_123
POSTGRES_DB=birthday_db
POSTGRES_PORT=5432

# Application
NODE_ENV=production
PORT=3000

# Redis
REDIS_PORT=6379

# AWS Configuration (optional - only needed if using SQS/CloudWatch)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SQS (optional)
SQS_QUEUE_URL=
SQS_DLQ_URL=

# Webhook
HOOKBIN_URL=https://hookbin.com/your_bin_id

# Features
SCHEDULER_ENABLED=false
WORKER_ENABLED=false
RECOVERY_ENABLED=false

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60,300,900
GRACE_PERIOD_MINUTES=120

# Worker
WORKER_CONCURRENCY=10

# CloudWatch
CLOUDWATCH_NAMESPACE=BirthdayNotifications
